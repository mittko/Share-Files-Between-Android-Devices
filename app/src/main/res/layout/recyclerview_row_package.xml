<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_package"
    android:background="@drawable/clickable_row"
    >
       <!-- <com.video.stream.encrypted.ui.VideoThumbnailImageView-->

        <ImageView

            app:layout_constraintHorizontal_weight="0.35"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/file_textview_package"
            android:id="@+id/thumbnail_imageview_package"
            android:contentDescription="@string/thumbnail"

            />

        <TextView
            app:layout_constraintHorizontal_weight="0.65"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constrainedWidth="true"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/thumbnail_imageview_package"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/file_textview_package"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:ellipsize="end"
            android:lines="2"
            android:text="image descritption"
            />




</androidx.constraintlayout.widget.ConstraintLayout>